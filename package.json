{
    "name": "java-bridge",
    "version": "2.4.0",
    "main": "dist/index.prod.min.js",
    "types": "dist/index.d.ts",
    "description": "A bridge between Node.js and Java APIs",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MarkusJx/node-java-bridge.git"
    },
    "author": "MarkusJx",
    "bugs": {
        "url": "https://github.com/MarkusJx/node-java-bridge/issues"
    },
    "homepage": "https://github.com/MarkusJx/node-java-bridge#readme",
    "files": [
        "dist/*.js",
        "dist/*.map",
        "dist/**/*.d.ts",
        "java-src/build/libs/*.jar",
        "native.d.ts"
    ],
    "napi": {
        "name": "java",
        "triples": {
            "additional": [
                "aarch64-apple-darwin",
                "i686-pc-windows-msvc",
                "aarch64-unknown-linux-gnu"
            ]
        }
    },
    "license": "MIT",
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "engines": {
        "node": ">= 15"
    },
    "scripts": {
        "artifacts": "napi artifacts",
        "build:all": "npm run build:napi -- --features all && npm run postbuild",
        "build": "npm run build:napi",
        "build:debug": "npm run build:napi:debug && npm run build:ts && npm run build:java",
        "postbuild": "npm run build:ts && npm run build:java",
        "build:napi": "napi build --cargo-name java --platform --release --js native.js --dts native.d.ts",
        "build:napi:debug": "napi build --cargo-name java --platform --js native.js --dts native.d.ts",
        "build:ts": "webpack build && cpy native.d.ts dist",
        "build:java": "run-script-os",
        "build:java:darwin:linux": "cd java-src && chmod +x gradlew && ./gradlew shadowJar",
        "build:java:win32": "cd java-src && .\\gradlew.bat shadowJar",
        "prepublishOnly": "napi prepublish -t npm",
        "test": "npm run testOnly",
        "testOnly": "npm run mocha",
        "mocha": "mocha -r ts-node/register test/*.test.ts --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
        "pretest": "npm run build",
        "version": "napi version",
        "prettier": "prettier --write .",
        "prettier:check": "prettier --check .",
        "prebuild": "rimraf dist",
        "prebuild:debug": "rimraf dist",
        "benchmark": "ts-node -P test/tsconfig.json test/benchmark/benchmark.ts",
        "prebenchmark": "npm run build",
        "docs": "typedoc --out docs ts-src/index.ts"
    },
    "dependencies": {
        "glob": "^10.3.3"
    },
    "devDependencies": {
        "@napi-rs/cli": "^2.16.2",
        "@types/chai": "^4.3.5",
        "@types/chai-as-promised": "^7.1.5",
        "@types/is-ci": "^3.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.4.10",
        "@types/semver": "^7.5.0",
        "@types/webpack-env": "^1.18.1",
        "@types/webpack-node-externals": "^3.0.0",
        "@types/yargs": "^17.0.24",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "cpy-cli": "^5.0.0",
        "expose-gc": "^1.0.0",
        "is-ci": "^3.0.1",
        "mocha": "^10.2.0",
        "mocha-junit-reporter": "^2.2.1",
        "mocha-multi-reporters": "^1.5.1",
        "nanobench": "^3.0.0",
        "node-loader": "^2.0.0",
        "prettier": "^3.0.1",
        "rimraf": "^5.0.1",
        "run-script-os": "^1.1.6",
        "semver": "^7.5.4",
        "string-replace-loader": "^3.1.0",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.1",
        "typedoc": "^0.24.8",
        "typescript": "^5.1.6",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    },
    "optionalDependencies": {
        "java-bridge-darwin-arm64": "2.1.5",
        "java-bridge-darwin-x64": "2.1.5",
        "java-bridge-linux-arm64-gnu": "2.1.5",
        "java-bridge-linux-x64-gnu": "2.1.5",
        "java-bridge-win32-ia32-msvc": "2.1.5",
        "java-bridge-win32-x64-msvc": "2.1.5"
    }
}
