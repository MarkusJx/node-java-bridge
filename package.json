{
    "name": "@markusjx/java",
    "version": "2.0.0-beta.1",
    "main": "dist/index.prod.min.js",
    "typings": "ts-src/index.ts",
    "description": "A bridge between Node.js and Java APIs",
    "files": [
        "dist",
        "src",
        "ts-src"
    ],
    "napi": {
        "name": "java",
        "triples": {
            "additional": [
                "aarch64-apple-darwin",
                "i686-pc-windows-msvc"
            ]
        }
    },
    "license": "MIT",
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "engines": {
        "node": ">= 10"
    },
    "scripts": {
        "artifacts": "napi artifacts",
        "build": "npm run build:napi && npm run build:ts && npm run build:java",
        "build:debug": "npm run build:napi:debug && npm run build:ts && npm run build:java",
        "build:napi": "napi build --platform --release --js native.js --dts native.d.ts",
        "build:napi:debug": "napi build --platform --js native.js --dts native.d.ts",
        "build:ts": "webpack build",
        "build:java": "run-script-os",
        "build:java:darwin:linux": "cd java-src && chmod +x gradlew && ./gradlew shadowJar",
        "build:java:win32": "cd java-src && .\\gradlew.bat shadowJar",
        "prepublishOnly": "napi prepublish -t npm",
        "test": "mocha -r ts-node/register test/**/*.test.ts",
        "pretest": "npm run build",
        "preab": "npm run build:debug",
        "version": "napi version",
        "ab": "ts-node file.js",
        "prettier": "prettier --write .",
        "prebuild": "rimraf dist",
        "prebuild:debug": "rimraf dist",
        "benchmark": "ts-node -P test/tsconfig.json test/benchmark/benchmark.ts && ts-node -P test/tsconfig.json test/benchmark/benchmarkDaemonThreads.ts",
        "prebenchmark": "npm run build",
        "docs": "typedoc --out docs ts-src/index.ts"
    },
    "dependencies": {
        "chalk": "^5.0.1",
        "glob": "^8.0.3",
        "ora": "^6.1.2",
        "typescript": "^4.7.4",
        "yargs": "^17.5.1"
    },
    "devDependencies": {
        "@napi-rs/cli": "^2.11.4",
        "@types/chai": "^4.3.3",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/yargs": "^17.0.11",
        "chai": "^4.3.6",
        "expose-gc": "^1.0.0",
        "mocha": "^10.0.0",
        "nanobench": "^2.1.1",
        "node-loader": "^2.0.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "run-script-os": "^1.1.6",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.0",
        "typedoc": "^0.23.10",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "optionalDependencies": {
        "java-darwin-arm64": "0.0.0",
        "java-darwin-x64": "0.0.0",
        "java-linux-x64-gnu": "0.0.0",
        "java-win32-ia32-msvc": "0.0.0",
        "java-win32-x64-msvc": "0.0.0"
    }
}
