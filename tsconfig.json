{
    "include": ["ts-src/**/*"],
    "compilerOptions": {
        "allowJs": false,
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "lib": ["ESNext", "es2020"],
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": true,
        "outDir": "./dist",
        "downlevelIteration": true
    },
    "exclude": ["node_modules", "dist"]
}
